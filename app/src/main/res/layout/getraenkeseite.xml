<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context="at.ac.univie.hci.goldfisch.MainActivity">

    <at.ac.univie.hci.goldfisch.ClickableViewPager
        android:id="@+id/view_page"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:fadingEdge="vertical"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/view_page"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="@string/_250ml"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginEnd="33dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toStartOf="@+id/imageButton3" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_330ml"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_500ml"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="37dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/amountt"
        android:contentDescription="@string/amount"
        android:clickable="true"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="95dp"
        android:layout_height="105dp"
        android:background="@drawable/amountt3"
        android:contentDescription="@string/glas2"
        app:srcCompat="@drawable/amountt3"
        android:clickable="true"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:background="@drawable/amountt"
        android:contentDescription="@string/glas3"
        android:clickable="true"
        app:srcCompat="@drawable/amountt"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_alignEnd="@+id/textView1" />

    <ImageView
        android:id="@+id/tutorialMenue"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/view_page"
        android:layout_marginTop="50dp"
        android:background="@drawable/tutorial_menue1"
        android:contentDescription="@string/tutorial_menue"
        android:visibility="invisible" />

</RelativeLayout>
